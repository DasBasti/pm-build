[Unit]
Description=Autostart ScummVM for thebrutzler
After=weston.service
Requires=weston.service

[Service]
User=thebrutzler
Group=thebrutzler
Environment=XDG_RUNTIME_DIR=/run/user/1000
Environment=WAYLAND_DISPLAY=wayland-1
ExecStart=/usr/bin/scummvm
Restart=on-failure
Type=simple

[Install]
WantedBy=graphical.target
