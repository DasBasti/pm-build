                        hook = "check_bootloader_version";
                        installed-directly = true;
                    },
                    {
                        filename = "u-boot.itb";
                        device = "/dev/disk/by-partlabel/loader2";
                        type = "raw";
                        sha256 = "$swupdate_get_sha256(u-boot.itb)";
                        hook = "check_bootloader_version";
                        installed-directly = true;
                    }
                );

                bootenv: (
