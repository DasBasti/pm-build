[Unit]
Description=Migrate rootfs /home to userdata partition
DefaultDependencies=no
After=local-fs-pre.target resize-userdata.service
Before=home.mount

[Service]
Type=oneshot
ExecStart=/usr/sbin/migrate-home.sh
RemainAfterExit=yes
StandardOutput=journal+console
StandardError=journal+console

[Install]
WantedBy=local-fs.target
